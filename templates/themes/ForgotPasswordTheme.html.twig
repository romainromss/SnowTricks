{% block form %}
    <div class="block" style="margin-top: 50px">
        <div class="block-content">
            {{ form_start(form) }}
            {{ form_errors(form) }}
            <div style="margin-top: 50px" class="form-group row">
                <div class="col-md-9">
                    <div class="form-material floating">
                        {{ form_widget(form.mail, {'attr': { 'class':'form-control'}}) }}
                        {{ form_label(form.mail) }}
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-9">
                    <div class="form-material floating">
                        {{ form_widget(form.username, {'attr': { 'class':'form-control'}}) }}
                        {{ form_label(form.username) }}
                    </div>
                </div>
            </div>

            <button id="forgot_user" type="submit" class="col-lg-4 offset-lg-4 btn btn-alt-primary submit">Envoyer</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
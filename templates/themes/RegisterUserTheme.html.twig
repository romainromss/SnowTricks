{% extends 'layout.html.twig' %}
{% block form %}
    <!-- Floating Labels -->
    <div class="block">
        <div class="block-content">
            {% if is_granted('IS_AUTHENTICATED_ANONYMOUSLY') %}
                {{ form_start(form) }}
                {{ form_errors(form) }}
                <div style="margin-top: 50px" class="form-group">
                    <div class="col-md-9">
                        <div class="form-material floating">
                            {{ form_widget(form.name, {'attr': { 'class':'form-control'}}) }}
                            {{ form_label(form.name) }}
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-9">
                        <div class="form-material floating">
                            {{ form_widget(form.username, {'attr': { 'class':'form-control'}}) }}
                            {{ form_label(form.username) }}
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-9">
                        <div class="form-material floating">
                            {{ form_widget(form.lastname, {'attr': { 'class':'form-control'}}) }}
                            {{ form_label(form.lastname) }}
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-9">
                        <div class="form-material floating">
                            {{ form_widget(form.mail, {'attr': { 'class':'form-control'}}) }}
                            {{ form_label(form.mail) }}
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-9">
                        <div class="form-material">
                            {{ form_row(form.password, {'attr': { 'class':'form-control'}}) }}
                            {{ form_label(form.password) }}
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-9">
                        <div class="form-material floating">
                            {{ form_row(form.picture, {'attr': { 'class':'form-control'}}) }}
                        </div>
                    </div>
                </div>

                <button id="register_user" type="submit" class="col-lg-4 offset-lg-4 btn btn-alt-primary submit">Envoyer</button>
                {{ form_end(form) }}
            {% endif %}
        </div>
    </div>
{% endblock %}
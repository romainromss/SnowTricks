{% block form %}
    <!-- Floating Labels -->
    <div class="block">
        <div class="block-content">
            {% if is_granted('IS_AUTHENTICATED_ANONYMOUSLY') %}
                {{ form_start(form) }}
                <div style="margin-top: 50px" class="form-group row">
                    <div class="col-md-9">
                        <div class="form-material floating">
                            {{ form_widget(form.name, {'attr': { 'class':'form-control'}}) }}
                            {{ form_label(form.name) }}
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-9">
                        <div class="form-material material-text-small">
                            {{ form_widget(form.description, {'attr': { 'class':'form-control'}}) }}
                            {{ form_label(form.description) }}
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-9">
                        <div class="form-material floating">
                            {{ form_widget(form.category, {'attr': { 'class':'form-control'}}) }}
                            {{ form_label(form.category) }}
                        </div>
                    </div>
                </div>
                <div id="add_pictures_index" data-index="{{ form.pictures|length }}">
                    {{ form_widget(form.pictures) }}
                    {{ form_label(form.pictures) }}
                    <button style="margin-top: 10px; margin-bottom: 20px" type="button" id="add_pictures" class="btn btn-alt-primary">Ajouter</button>
                </div>
                <div id="add_movies_index" data-index="{{ form.movies|length }}">
                    {{ form_widget(form.movies) }}
                    {{ form_label(form.movies) }}
                    <button style="margin-top: 10px" type="button" id="add_movies" class="btn btn-alt-primary">Ajouter</button>
                </div>
                <button id="add_trick" type="submit" class="col-lg-4 offset-lg-4 btn btn-alt-primary submit">Envoyer</button>
                {{ form_end(form) }}
            {% endif %}
        </div>
    </div>
{% endblock %}

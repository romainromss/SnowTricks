{% block form %}
    <div class="content container">
        <div class="row">
            <div class="offset-2 col-md-6">
                <!-- Floating Labels -->
                <div class="block">
                    <div class="block-content">
                        {% if is_granted('IS_AUTHENTICATED_ANONYMOUSLY') %}
                            {{ form_start(form) }}
                            <div class="form-group row">
                                <div class="col-md-9">
                                    <div class="form-material floating">
                                        {{ form_widget(form.name, {'attr': { 'class':'form-control'}}) }}
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-9">
                                    <div class="form-material material-text-small">
                                        {{ form_widget(form.description, {'attr': { 'class':'form-control'}}) }}
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-9">
                                    <div class="form-material floating">
                                        {{ form_widget(form.group, {'attr': { 'class':'form-control'}}) }}
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-9">
                                    <div class="form-material floating">
                                        {{ form_widget(form.slug, {'attr': { 'class':'form-control'}}) }}
                                    </div>
                                </div>
                            </div>
                            {{ form_end(form) }}
                            <button type="submit" class="col-lg-4 offset-lg-4 btn btn-alt-primary submit">Envoyer</button>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

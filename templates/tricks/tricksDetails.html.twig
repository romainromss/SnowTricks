{% extends 'layout.html.twig' %}

{% block head %}
    <!-- Page Content -->
    <div class="bg-image" style='background-image: url("{{ asset('images/Upload/' ~ tricks.pictures.0.name ) }}");'>
        <div class="hero bg-primary-dark-op">
            <div class="hero-inner">
                <div class="content content-full text-center">
                    <h1 class="display-4 font-w700 text-white mb-10 invisible"
                        data-toggle="appear" data-class="animated fadeInDown">{{ tricks.name }}</h1>
                </div>
            </div>
        </div>
    </div>
    <!-- END Page Content -->
{% endblock %}


 {% block content %}
     <!-- Page Content -->
     <!-- Main Container -->
     <main id="main-container">
         <!-- Page Content -->
         <div class="content">
             <div id="Display">
             <div class="row items-push js-gallery img-fluid-100">
                 {% for picture in tricks.pictures if picture.first == false %}
                         <div class="col-md-6 col-lg-4 col-xl-3 medias">
                             <a href="{{ asset('images/Upload/' ~ picture.name ) }}">
                                 <img class="img-fluid" style="min-height: 190px" src="{{ asset('images/Upload/' ~ picture.name ) }}" alt="">
                             </a>
                         </div>
                 {% endfor %}

                 {% for movie in tricks.movies %}
                     <div class="col-md-6 col-lg-4 col-xl-3 medias">
                         <iframe style="height: 190px; width: 100%; min-height: 180px"
                                 src="https://www.youtube.com/embed/{{ movie.embed }}?ecver=1"
                                 frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
                     </div>
                 {% endfor %}
             </div>
             </div>

             <div>
                 <button  id="more" type="button" class="btn btn-rounded btn-noborder btn-info min-width-125 mb-10" style="display: block; margin: auto">More</button><br>
             </div>

             <h3 style="text-align: center; color: #292929">{{ tricks.description }}</h3>
             <div class="info" style="text-align: center; display: flex; justify-content: center">
                 <p style="border-radius: 2px 5px 5px; border: solid #26c6da; background-color: #26c6da; margin-right:5px; color: white">
                     modification: {{ tricks.updatedAt|date("d/m/Y") }}
                 </p>
                 <p style="border-radius: 2px 5px 5px; border: solid #26c6da; background-color: #26c6da; margin-right: 5px; color: white">
                     cr√©ation: {{ tricks.createdAt|date("d/m/Y") }}
                 </p>
                 <p style="border-radius: 2px 5px 5px; border: solid #26c6da; background-color: #26c6da; color: white">
                     groupe:{{ tricks.group }}
                 </p>
             </div>
         </div>
     </main>

     <div>
         {{ form_start(form) }}
         {{ form_row(form.content) }}
         <button type="submit"> Envoyer </button>
         {{ form_end(form) }}
     </div>

     <input type="hidden" id="type" value=".comments">

     <div class="row" style="justify-content: center">
     <div class="col-sm-6 col-xl-4">
     <ul class="nav-users push">
         {% for comment in tricks.comments %}
     <li>
         {% if comment.users %}
             {% if comment.users.pictures.avatar == '' %}
                 <img class="img-avatar" src="{{ asset('images/Upload/avatar_defaut.png') }}" alt="">
             {% else %}
                 <img class="img-avatar" src="{{ asset('images/Upload/' ~ comment.users.pictures.avatar ) }}" alt="">
             {% endif %}
             <p class="d-inline-block" style="font-weight: bold; font-size: 15px"> {{ comment.users.username }} </p>
         {% endif %}
         <div class="font-w400 text-muted" style="padding-left: 65px; margin-bottom: 30px">{{ comment.content }}</div>
     </li>
         {% endfor %}
     </ul>
     </div>
     </div>
     <!-- END Page Content -->

     <script src="//cdnjs.cloudflare.com/ajax/libs/mobile-detect/1.4.1/mobile-detect.min.js"></script>
     <script src="{{ asset('js/seemore.js') }}"></script>
 {% endblock %}

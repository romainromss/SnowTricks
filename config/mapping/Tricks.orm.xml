<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="App\Entity\Tricks" table="tricks" repository-class="App\Repository\TricksRepository">

        <indexes>
            <index name="name_idx" columns="name" />
        </indexes>

        <one-to-many field="movies" target-entity="Movies" mapped-by="trick">
        </one-to-many>

        <one-to-many field="pictures" target-entity="Pictures" mapped-by="trick">
        </one-to-many>

        <one-to-many field="comments" target-entity="Comments" mapped-by="trick">
        </one-to-many>

        <many-to-one field="user" target-entity="Users" inversed-by="tricks">
        </many-to-one>

        <id name="id" column="id" type="uuid">
            <generator strategy="CUSTOM"/>
            <custom-id-generator class="Ramsey\Uuid\Doctrine\UuidGenerator"/>
        </id>

        <field name="name" column="name" type="string" length="20" nullable="false"/>
        <field name="description" column="description" type="text" nullable="false"  />
        <field name="group" column="group" type="string" length="20" nullable="false" />
        <field name="created_at" column="created_at" type="string" length="20" nullable="false" />
        <field name="updated_at" column="updated_at" type="string" length="20" nullable="false" />

    </entity>
</doctrine-mapping>
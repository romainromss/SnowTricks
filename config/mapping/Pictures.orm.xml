<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="App\Entity\Pictures" table="pictures" repository-class="App\Repository\PicturesRepository">

        <indexes>
            <index name="avatar_idx" columns="avatar"/>
            <index name="name_idx" columns="name" />
        </indexes>

        <many-to-one field="trick" target-entity="Tricks" inversed-by="pictures">
        </many-to-one>
        <one-to-one field="user" target-entity="Users" inversed-by="pictures">
        </one-to-one>

        <id name="id" column="id" type="uuid" />

        <field name="name" column="name" type="string" length="20" nullable="false"/>
        <field name="legend" column="legend" type="string" length="50" nullable="false"/>
        <field name="avatar" column="avatar" type="string" length="50" nullable="true"/>


    </entity>
</doctrine-mapping>

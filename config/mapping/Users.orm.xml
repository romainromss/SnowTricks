<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="App\Entity\Users" table="users" repository-class="App\Repository\UsersRepository">

        <indexes>
            <index name="username_idx" columns="username"/>
            <index name="password_idx" columns="password" />
        </indexes>

        <one-to-many field="comments" target-entity="Comments" mapped-by="user">
        </one-to-many>

        <one-to-many field="tricks" target-entity="Tricks" mapped-by="user" >
        </one-to-many>

        <one-to-one field="avatar" target-entity="Pictures" mapped-by="user">
        </one-to-one>


        <id name="id" column="id" type="uuid">
            <generator strategy="CUSTOM"/>
            <custom-id-generator class="Ramsey\Uuid\Doctrine\UuidGenerator"/>
        </id>

        <field name="username" column="username" type="string"  length="10" nullable="false"  />
        <field name="name" column="name" type="string" length="10" nullable="false" />
        <field name="lastname" column="lastname" type="string" length="20" nullable="false" />
        <field name="password" column="password" type="string" length="65" nullable="false"  />
        <field name="email" column="email" type="string" length="50" nullable="false"  />
        <field name="role" column="role" type="array" nullable="false" />
        <field name="created_at" column="created_at" type="string" nullable="false"  />


    </entity>

</doctrine-mapping>
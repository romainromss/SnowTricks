<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="App\Domain\Models\Comments" table="comments" repository-class="App\Repository\CommentsRepository">


        <many-to-one field="trick" target-entity="Tricks" inversed-by="comments">
        </many-to-one>

        <many-to-one field="users" target-entity="Users" inversed-by="comments">
        </many-to-one>

        <id name="id" column="id" type="uuid" />

        <field name="content" column="content" type="string" length="200" nullable="false"/>
        <field name="createdAt" column="createdAt" type="integer" length="20" nullable="false"  />


    </entity>
</doctrine-mapping>
